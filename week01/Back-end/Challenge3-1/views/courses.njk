{% extends "layout.njk" %}

{% block head %}

<title>Courses - Rocketseat</title>

<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">


{% endblock %}

{% block content %}

    <div id="wrapper">
        <h1>Courses</h1>
    </div>

    <section class="cards">

        <div class="card" id="starter">
            <div class="card_img-container">
                <img src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" alt="Starter Logo">
            </div>

            <div class="card_text-container">
                <div class="card_title">
                    <h1>Starter</h1>
                </div>

                <div class="card_info">
                    <p>2 Modules</p>
                </div>
                <div class="card_price">
                    <p>Free</p>
                </div>
            </div>
        </div>

        <div class="card" id="launchbase">
            <div class="card_img-container">
                <img src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg" alt="LaunchBase Logo">
            </div>

            <div class="card_text-container">
                <div class="card_title">
                    <h1>LaunchBase</h1>
                </div>

                <div class="card_info">
                    <p>6 Modules</p>
                </div>
                <div class="card_price">
                    <p>Paid</p>
                </div>
            </div>
        </div>

        <div class="card" id="gostack">
            <div class="card_img-container">
                <img src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" alt="GoStack Logo">
            </div>

            <div class="card_text-container">
                <div class="card_title">
                    <h1>GoStack</h1>
                </div>

                <div class="card_info">
                    <p>6 Modules</p>
                </div>
                <div class="card_price">
                    <p>Paid</p>
                </div>
            </div>
        </div>

    </section>

    <div class="modal-overlay">
        <div class="modal">

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>

            <a class="close-modal">
                <span class="material-icons">
                    highlight_off
                </span>
            </a>
        </div>
    </div>

    <script src="/scripts.js"></script>


    {% endblock %}