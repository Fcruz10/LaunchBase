{% extends 'layout.njk' %}

{% block head %}

    <title>Foodfy</title>

{% endblock %}


{% block content %}


    <main>

        <div class="container">

            <div class="container_text">
                <h1>The Best Recipes</h1>
                <p>Learn how to build the best dishes with recipes created by professionals from all over the world.</p>

            </div>

            <div class="container_img">
                <img src="./assets/chef.png" alt="Chef">
            </div>
        </div>

        <div class="cards_title">
            <h1>Most Accessed</h1>
        </div>

        <section class="cards">

            <div class="card">
                <div class="card_img-container">
                    <img src="./assets/burger.png" alt="">
                </div>

                <div class="card_text-container">
                    <div class="card_title">
                        <h1>Triplo Bacon Burger</h1>
                    </div>

                    <div class="card_author">
                        <p>By Jorge Relato</p>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card_img-container">
                    <img src="./assets/pizza.png" alt="">
                </div>

                <div class="card_text-container">
                    <div class="card_title">
                        <h1>4 Seasons Pizza</h1>
                    </div>

                    <div class="card_author">
                        <p>By Fabiana Melo</p>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card_img-container">
                    <img src="./assets/espaguete.png" alt="">
                </div>

                <div class="card_text-container">
                    <div class="card_title">
                        <h1>Spaghetti with Garlic</h1>
                    </div>

                    <div class="card_author">
                        <p>By Júlia Kinoto</p>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card_img-container">
                    <img src="./assets/lasanha.png" alt="">
                </div>

                <div class="card_text-container">
                    <div class="card_title">
                        <h1>Mac n ’Cheese Lasagna</h1>
                    </div>

                    <div class="card_author">
                        <p>By Juliano Vieira</p>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card_img-container">
                    <img src="./assets/doce.png" alt="">
                </div>

                <div class="card_text-container">
                    <div class="card_title">
                        <h1>Heavenly sweets</h1>
                    </div>

                    <div class="card_author">
                        <p>By Ricardo Golvea</p>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card_img-container">
                    <img src="./assets/asinhas.png" alt="">
                </div>

                <div class="card_text-container">
                    <div class="card_title">
                        <h1>BBQ chicken wings</h1>
                    </div>

                    <div class="card_author">
                        <p>By Vania Steroski</p>
                    </div>
                </div>
            </div>

        </section>
    </main>

    <script src="/scripts.js"></script>

{% endblock %}