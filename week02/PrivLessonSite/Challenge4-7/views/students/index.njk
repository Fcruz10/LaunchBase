{% extends 'layout.njk' %}

{% block head %}
    <title>Student - Private Lessons</title>
{% endblock %}

{% block content %}

<div class="card table-container">

    <table width="100%  ">
        <thead>
            <tr>
                <th>Student</th>
                <th>Subject</th>
                <th>How</th>
            </tr>
        </thead>

        <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <span style="background-image: url({{student.avatar_url}})"></span>
                    {{student.name}}
                </td>
                <td class="subjects">
                    
                </td>
                <td>
                    <a href="/students/{{student.id}}">See</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}