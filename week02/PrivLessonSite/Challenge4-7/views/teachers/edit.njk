{% extends 'layout.njk' %}

{% block head %}
    <title>Teachers - Edit</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
{% endblock %}

{% block content %}

<div class="card">

    <section class="avatar"
        style="background: url({{teacher.avatar_url}}) no-repeat center center / cover">
    </section>

    <section class="details">

        <form method="POST" action="/teachers?_method=PUT">

            <h3>Edit Teacher</h3>
            
            {% include 'teachers/fields.njk' %}

            <input type="hidden" name="id" value={{teacher.id}}>
    
        </form>

        <form id="delete" method="POST" action="/teachers?_method=DELETE">

            <input type="hidden" name="id" value={{teacher.id}}>

            <button type="submit" id="form-delete">
                <p>Delete</p>
                <span class="material-icons">delete</span>
            </button>       

        </form>

    </section>
</div>

{% endblock %}