{% extends 'layout.njk' %}

{% block head %}
    <title>Teachers - Private Lessons</title>
{% endblock %}

{% block content %}

<div class="card table-container">

    <table width="100%  ">
        <thead>
            <tr>
                <th>Teacher</th>
                <th>Subject</th>
                <th>How</th>
            </tr>
        </thead>

        <tbody>
            {% for teacher in teachers %}
            <tr>
                <td>
                    <span style="background-image: url({{teacher.avatar_url}})"></span>
                    {{teacher.name}}
                </td>
                <td class="subjects">
                    {% for subject in teacher.subjects.split(",") %}
                        <span>{{subject}}</span>
                    {% endfor %}
                </td>
                <td>
                    <a href="/teachers/{{teacher.id}}">See</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}