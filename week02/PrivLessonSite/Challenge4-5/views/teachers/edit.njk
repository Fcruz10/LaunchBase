{% extends 'layout.njk' %}

{% block head %}
    <title>Teachers - Edit</title>
{% endblock %}

{% block content %}

<div class="card">

    <section class="avatar"
        style="background: url(https://source.unsplash.com/collection/10085420/900x900) no-repeat center center / cover">
    </section>

    <section class="details">

        <form method="POST" action="/teachers?_method=PUT">

            <h3>Edit Teacher</h3>
            
            {% include 'teachers/fields.njk' %}

            <input type="hidden" name="id" value={{teacher.id}}>
    
        </form>

        <form id="delete" method="POST" action="/teachers?_method=DELETE">

            <input type="hidden" name="id" value={{teacher.id}}>

            <button type="submit" id="form-delete">Delete</button>       

        </form>

    </section>
</div>

{% endblock %}